{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=intranet_starter;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Authority": "https://localhost:5000",
    "Audience": "intranet-api",
    "RequireHttpsMetadata": "true"
  },
  "CorsSettings": {
    "AllowedOrigins": "http://localhost:3000,https://localhost:3000,http://localhost:5173,https://localhost:5173"
  },
  "FileStorage": {
    "LocalPath": "./uploads",
    "S3": {
      "BucketName": "",
      "Region": "us-east-1",
      "ServiceUrl": ""
    },
    "Azure": {
      "ConnectionString": "",
      "ContainerName": "files"
    }
  },
  "ApplicationName": "Intranet Starter",
  "ApplicationUrl": "http://localhost:3000",
  "Email": {
    "FromName": "Intranet Starter",
    "FromAddress": "noreply@company.com",
    "SmtpHost": "",
    "SmtpPort": "587",
    "Username": "",
    "Password": "",
    "UseSsl": "true",
    "DefaultCulture": "en-US"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Localization": {
    "DefaultLanguage": "en-US",
    "SupportedLanguages": [ "en-US", "es-ES" ],
    "EnableMultiLanguage": true,
    "UseAcceptLanguageHeader": true,
    "FallbackToDefaultLanguage": true
  },
  "AllowedHosts": "*"
}