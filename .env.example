# Database Configuration
POSTGRES_DB=intranet_starter
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Application Environment
ASPNETCORE_ENVIRONMENT=Production
BUILD_TARGET=production

# JWT Configuration
JWT_AUTHORITY=https://your-domain.com
JWT_AUDIENCE=intranet-api
JWT_REQUIRE_HTTPS=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Admin Configuration
ADMIN_EMAIL=admin@your-company.com
ALLOWED_DOMAIN=your-company.com

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=noreply@your-company.com
SMTP_PASSWORD=your_smtp_password
SMTP_USE_SSL=true
EMAIL_FROM_NAME=Your Company Intranet
EMAIL_FROM_ADDRESS=noreply@your-company.com

# Frontend Configuration
VITE_API_URL=https://api.your-domain.com
VITE_SIGNALR_URL=https://api.your-domain.com

# Monitoring (Optional)
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# File Storage (Optional - for cloud providers)
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-intranet-files

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=files