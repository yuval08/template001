# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intranet_starter
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Connection String (alternative to individual DB settings)
# ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=intranet_starter;Username=postgres;Password=your_secure_password

# Authentication & Authorization
ALLOWED_DOMAIN=company.com
ADMIN_EMAIL=admin@company.com

# JWT Configuration
JWT_AUTHORITY=https://your-identity-server.com
JWT_AUDIENCE=intranet-api
JWT_REQUIRE_HTTPS=true

# Identity Server Configuration (if using Duende IdentityServer)
IDENTITY_SERVER_URL=https://localhost:5000
IDENTITY_SERVER_CLIENT_ID=intranet-client
IDENTITY_SERVER_CLIENT_SECRET=your_client_secret

# Azure AD Configuration (for OIDC)
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# Google OIDC Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# File Storage Configuration
STORAGE_DRIVER=Local
# Options: Local, S3, Azure

# Local File Storage
FILE_STORAGE_LOCAL_PATH=./uploads

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_REGION=us-east-1
# AWS_S3_SERVICE_URL=http://localhost:9000  # For MinIO or other S3-compatible services

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER_NAME=files

# Email Configuration (SMTP)
EMAIL_FROM_NAME=Intranet Starter
EMAIL_FROM_ADDRESS=noreply@company.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@company.com
EMAIL_PASSWORD=your_app_password
EMAIL_USE_SSL=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,https://yourfrontend.com

# Logging Configuration
LOG_LEVEL=Information
LOG_FILE_PATH=./logs/log-.txt

# Hangfire Dashboard Configuration
HANGFIRE_DASHBOARD_ENABLED=true
HANGFIRE_DASHBOARD_PATH=/hangfire

# Health Checks Configuration
HEALTH_CHECKS_ENABLED=true
HEALTH_CHECKS_PATH=/health

# Application URLs
APPLICATION_URL=https://localhost:7001
FRONTEND_URL=https://localhost:3000

# Environment
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7001;http://localhost:5000

# Certificate Configuration (for HTTPS in Docker)
ASPNETCORE_Kestrel__Certificates__Default__Password=your_cert_password
ASPNETCORE_Kestrel__Certificates__Default__Path=/app/certificates/aspnetcore.pfx